    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "linux": {
                "program": "${workspaceFolder}/target/debug/rust"
            },
            "windows": {
                "program": "${workspaceFolder}/target/debug/rust.exe",
                "miDebuggerPath": "C:/Users/olivier/AppData/Local/Programs/MinGW/bin/gdb.exe"
            },
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "externalConsole": true,
        }
    ]
}
